{
	"compilerOptions": {
		"module"                : "commonjs",
		"target"                : "es6",
		"sourceMap"             : true,
		"emitDecoratorMetadata" : true,
		"experimentalDecorators": true,
		"outDir"                : "./dist",
		"resolveJsonModule"     : true,
		"esModuleInterop"       : true
	},
	"include"        : [
		"src/**/*"
	],
	"exclude"        : [
		"node_modules"
	]
}